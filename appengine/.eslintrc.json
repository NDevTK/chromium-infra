{
  "extends": "google",
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": 0,
    "indent": ["error", 2],
    "max-len": [
      "error", {
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ]
  }
}